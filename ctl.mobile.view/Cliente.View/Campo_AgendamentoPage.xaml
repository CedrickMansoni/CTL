<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ctl.mobile.view.Cliente.View.Campo_AgendamentoPage"
             BackgroundColor="#058380"
             Shell.BackgroundColor="#058380"
             Shell.ForegroundColor="#FFF"
             Shell.TitleColor="#FFF"
             xmlns:vm="clr-namespace:ctl.mobile.viewmodel.Client.ViewModel;assembly=ctl.mobile.viewmodel"
             x:DataType="vm:Campo_AgendamentoViewModel"
             Title="{Binding Campo.Nome, StringFormat=Campo: '{0}'}">

    <ContentPage.BindingContext>
        <vm:Campo_AgendamentoViewModel/>
    </ContentPage.BindingContext>

    <Grid>
        <Border StrokeThickness="0"
                BackgroundColor="#FFF"/>
        <Grid Padding="20"
              RowDefinitions="Auto, *, Auto, Auto"
              ColumnDefinitions="*,*,*"
              RowSpacing="10"
              ColumnSpacing="5">


            <Border Grid.Row="1"
                    Grid.ColumnSpan="3"
                    BackgroundColor="#f2f4f5"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 10">

            </Border>

            <Border VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Padding="15, -15"
                    StrokeThickness="0"
                    Grid.Row="2"
                    BackgroundColor="#f2f4f5"
                    StrokeShape="RoundRectangle 20">
                <DatePicker HeightRequest="70"
                            FontFamily="MontserratMedium"
                            FontSize="20"/>
            </Border>

            <Border VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Padding="15, -15"
                    StrokeThickness="0"
                    BackgroundColor="#f2f4f5"
                    StrokeShape="RoundRectangle 20"
                    Grid.Row="2"
                    Grid.Column="1">
                <TimePicker HeightRequest="70"
                            Format="HH:mm"
                            FontFamily="MontserratMedium"
                            FontSize="20"/>
            </Border>
            <Border VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Padding="15, -15"
                    StrokeThickness="0"
                    BackgroundColor="#f2f4f5"
                    StrokeShape="RoundRectangle 20"
                    Grid.Row="2"
                    Grid.Column="2">
                <TimePicker HeightRequest="70"
                            Format="HH:mm"
                            FontFamily="MontserratMedium"
                            FontSize="20"/>
            </Border>
            <Button Grid.Row="3"
                    Grid.Column="2"
                    Text="Agendar"
                    FontFamily="MontserratMedium"
                    FontSize="15"
                    BackgroundColor="#058380"
                    CornerRadius="30"/>
        </Grid>
    </Grid>

</ContentPage>