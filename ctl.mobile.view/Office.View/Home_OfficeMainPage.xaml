<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ctl.mobile.view.Office.View.Home_OfficeMainPage"
             xmlns:vm="clr-namespace:ctl.mobile.viewmodel.Share.ViewModel;assembly=ctl.mobile.viewmodel"
             xmlns:data="clr-namespace:ctl.share.DTO_App.Noticia;assembly=ctl.share"
             BackgroundColor="#058380"
             Shell.NavBarIsVisible="False"
             x:DataType="vm:Noticia_ViewModel"
             Title="Home">

    <ContentPage.BindingContext>
        <vm:Noticia_ViewModel/>
    </ContentPage.BindingContext>

    <Grid>
        <Grid RowDefinitions="Auto,*,Auto"
              IsEnabled="{Binding EnablePage}">
            <Border BackgroundColor="#FFF"
                    HeightRequest="40"
                    WidthRequest="40"
                    Margin="10"
                    HorizontalOptions="Start"
                    StrokeThickness="2"
                    Stroke="#DEDEDE"
                    StrokeShape="RoundRectangle 60">
                <Image Source="user"
                       Aspect="Fill"/>
            </Border>


            <CollectionView ItemsSource="{Binding Noticias}"
                            SelectionMode="None"
                            x:Name="colecao"
                            Grid.Row="1"
                            BackgroundColor="#FFF"
                            VerticalOptions="Fill">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="data:Noticia_DTO">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItemView>
                                        <Grid VerticalOptions="Center"
                                              RowDefinitions="Auto, Auto"
                                              Margin="5"
                                              RowSpacing="5">
                                            <Grid>
                                                <Image Source="deletar"/>
                                                <Button Text=""
                                                        HeightRequest="100"
                                                        CornerRadius="90"
                                                        BackgroundColor="Transparent"
                                                        Command="{Binding BindingContext.DeletarNoticiaCommand, Source = {x:Reference Name = colecao}}"
                                                        CommandParameter="{Binding .}"/>
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <Image Source="editar"/>
                                                <Button Text=""
                                                        HeightRequest="100"
                                                        CornerRadius="90"
                                                        BackgroundColor="Transparent"
                                                        Command="{Binding BindingContext.EditarNoticiaCommand, Source = {x:Reference Name = colecao}}"
                                                        CommandParameter="{Binding .}"/>
                                            </Grid>

                                        </Grid>
                                    </SwipeItemView>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Grid RowDefinitions="*,Auto"
                                  Margin="0,0,0,10">
                                <Grid Grid.Row="0">
                                    <Image Source="gallery"/>
                                    <Image Source="{Binding Imagem}"
                                           Aspect="Fill"/>
                                </Grid>
                                <StackLayout Padding="15,0"
                                             Grid.Row="1">
                                    <Label Text="{Binding Titulo, StringFormat='{0}'}"
                                           FontSize="Title"
                                           MaxLines="2"
                                           FontFamily="AlfaRegular"/>
                                    <Label Text="{Binding Materia, StringFormat='{0}'}"
                                           FontSize="Medium"
                                           MaxLines="3"
                                           FontFamily="MontserratMedium"/>
                                </StackLayout>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BindingContext.VerDetalhesCommand, Source={x:Reference Name = colecao}}"
                                                          CommandParameter="{Binding .}"/>
                                </Grid.GestureRecognizers>
                            </Grid>
                        </SwipeView>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Grid>
                        <Label Text="Sem notÃ­cias"
                               FontSize="30"
                               FontFamily="MontserratBlack"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>
                    </Grid>
                </CollectionView.EmptyView>
            </CollectionView>


            <Border Grid.Row="1"
                    StrokeShape="RoundRectangle 60"
                    Margin="10"
                    VerticalOptions="End"
                    HorizontalOptions="End">
                <Grid
                    HeightRequest="60"
                    WidthRequest="60"
                    HorizontalOptions="End"
                    BackgroundColor="#FFF">
                    <Image Source="add"
                           Aspect="Fill"/>
                    <Button BackgroundColor="Transparent"
                            Command="{Binding AdicionarnoticiaCommand}"/>
                </Grid>
            </Border>
        </Grid>
        <StackLayout BackgroundColor="#000"
                     Opacity="0.6"
                     IsVisible="{Binding Activity}"
                     VerticalOptions="Fill"
                     HorizontalOptions="Fill"/>
        <Image Source="carregar"
               HeightRequest="100"
               IsVisible="{Binding Activity}"
               IsAnimationPlaying="{Binding Activity}"/>
    </Grid>
</ContentPage>